<p id="notice"><%= notice %></p>

<h2>Drugs</h2>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drugs.each do |drug| %>
      <tr>
        <td>Name: <%= drug.name %></td>
        <td>Manufacturer: <%= drug.manufacturer %></td>
        <td>NDC: <%= drug.ndc %></td>
        <td>Reconstitution: <%= drug.reconstitution %></td>
        <td>Notes: <%= drug.notes %></td>
        <td>Latex: <%= drug.latex %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Show', drug %></td>
          <td><%= link_to 'Edit', edit_drug_path(drug) %></td>
          <td><%= link_to 'Destroy', drug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

