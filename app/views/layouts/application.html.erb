<!DOCTYPE html>
<html>
  <head>
    <title>DrugCards</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>Drug Information</h1>
      <ul class="navbar">
      <li class="navbar-link"><%= link_to "Deeds", root_path %></li>
      <li class="navbar-link"><%= link_to "Sign In", user_session_path %></li>
      <% if current_user %>
        <% if current_user.account %>
          <li class="navbar-link"><%= link_to "My Profile", account_path(current_user.account)%></li>
          <li class="navbar-link"><%= link_to "Sign Out", destroy_user_session_path, method: 'delete' %></li>
        <% else %>
          <li class="navbar-link"><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li class="navbar-link"><%= link_to 'Sign In', user_session_path %></li>
        <% end %>
      <% end %>
    </ul>
    </header>
    <div id="container">

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
